{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "prebuild",
			"type": "shell",
			"command": "bash",
			"args": [
				"prebuild.sh"
			]
		},
		{
			"type": "hxml",
			"file": "build.dev.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": "build",
			"label": "haxe: build.dev.hxml",
			"dependsOn": "prebuild"
		},
		{
			"type": "shell",
			"command": "hl bin/dev/*.hl",
			"label": "Build and Run HL",
			"dependsOn": "haxe: build.dev.hxml",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}